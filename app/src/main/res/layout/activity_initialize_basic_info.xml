<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context="com.example.artur.bandsapp2.InitializeBasicInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/roundedPhoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_avatar"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/textColorDark"
            android:layout_margin="0dp"
            />



        <TextView
            android:id="@+id/upload_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload your photo"
            android:textSize="@dimen/_10sdp"
            android:textColor="#000000"
            style="@style/textView_style"
            android:paddingBottom="10dp"
            android:onClick="onClick"
            android:clickable="true"/>

        <EditText
            android:id="@+id/firstName"
            android:inputType="textEmailAddress"
            style="@style/editText_style"
            android:hint="First name"
            android:textColor="#191919"
            android:textColorHint="#AAAAAA"/>

        <EditText
            android:id="@+id/lastName"
            android:inputType="textEmailAddress"
            style="@style/editText_style"
            android:hint="Last name"
            android:textColor="#191919"
            android:textColorHint="#AAAAAA" />

        <EditText
            android:id="@+id/phoneNumber"
            android:inputType="phone"
            style="@style/editText_style"
            android:hint="Phone number"
            android:textColor="#191919"
            android:textColorHint="#AAAAAA" />

        <EditText
            android:id="@+id/city"
            android:inputType="textPersonName"
            style="@style/editText_style"
            android:hint="Location"
            android:textColor="#191919"
            android:textColorHint="#AAAAAA" />

        <Button
            android:id="@+id/submitButton"
            style="@style/button_style"
            android:textColor="@color/textColorLight"
            android:text="Update your data" />


    </LinearLayout>


</RelativeLayout>
